<UserControl x:Class="WPFMultired.UserControls.ResumeTransactionUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPFMultired.UserControls"
             mc:Ignorable="d"
             Height="1920" 
             Width="1080">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/Images/Backgrounds/bg-detail-transaction.jpg"/>
        </Grid.Background>

        <Grid.RowDefinitions>
            <RowDefinition Height="200" />
            <RowDefinition Height="550" />
            <RowDefinition Height="150" />
            <RowDefinition Height="400" />
            <RowDefinition Height="280" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid Grid.Row="1">
            <TextBlock 
                Name="tb_name_company"
                FontSize="30"
                TextAlignment="Left"
                Margin="0,0,200,0"
                FontFamily="Arial"
                Foreground="#FF606060"
                VerticalAlignment="Center"
                HorizontalAlignment="Right" />
            
            <TextBlock 
                Name="tb_name_client"
                FontSize="30"
                TextAlignment="Left"
                Margin="0,160,200,0"
                FontFamily="Arial"
                Foreground="#FF606060"
                VerticalAlignment="Center"
                HorizontalAlignment="Right" />

            <TextBlock 
                Name="tb_amount_pay"
                FontSize="30"
                TextAlignment="Left"
                Margin="0,290,200,0"
                FontFamily="Arial"
                Foreground="#FF606060"
                FontWeight="Bold"
                VerticalAlignment="Center"
                HorizontalAlignment="Right" />

            <TextBlock 
                Name="tb_extra_amount_pay"
                FontSize="30"
                TextAlignment="Left"
                Margin="0,420,200,0"
                FontFamily="Arial"
                Foreground="#FF606060"
                VerticalAlignment="Center"
                HorizontalAlignment="Right" />
        </Grid>

        <Grid Grid.Row="2">
            <ListView x:Name="lv_denominations" 
                    Margin="0,0,0,10"
                    Background="Transparent"
                    BorderBrush="Transparent"
                    HorizontalAlignment="Center" 
                    VerticalAlignment="Top"
                    ItemsSource="{Binding}">

                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <UniformGrid Columns="1"
                                 HorizontalAlignment="Center"
                                     VerticalAlignment="Top"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>

                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Grid HorizontalAlignment="Center"
                            VerticalAlignment="Top" Background="Transparent"
                            Margin="0,0,0,0"
                            Width="600"
                            Height="28">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="250" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <TextBlock 
                                    Text="{Binding Denominacion, StringFormat={}{0:C0}}"
                                    FontSize="25"
                                    FontFamily="Arial"
                                    TextAlignment="Right"
                                    TextWrapping="Wrap"
                                    Margin="0,0,0,0"
                                    Foreground="#606060"
                                    Width="250"
                                    VerticalAlignment="Center"
                                    HorizontalAlignment="Center"
                                    Grid.Column="0"
                           />
                            <TextBlock 
                                    Text="{Binding Quantity}"
                                    FontSize="25"
                                    FontFamily="Arial"
                                    TextAlignment="Right"
                                    TextWrapping="Wrap"
                                    Width="100"
                                    Margin="0,0,0,0"
                                    Foreground="#FF104B6D"
                                    VerticalAlignment="Center"
                                    HorizontalAlignment="Center"
                                    FontWeight="Bold"
                                    Grid.Column="1"
                           />
                            <TextBlock 
                                    Text="{Binding Total, StringFormat={}{0:C0}}"
                                    FontSize="25"
                                    FontFamily="Arial"
                                    TextAlignment="Right"
                                    TextWrapping="Wrap"
                                    Margin="0,0,30,0"
                                    Width="140"
                                    Foreground="#FF104B6D"
                                    VerticalAlignment="Center"
                                    HorizontalAlignment="Center"
                                    FontWeight="Bold"
                                    Grid.Column="2" 
                           />
                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </Grid>
        
        <Grid Grid.Row="3">
            <TextBlock 
                Name="tb_total"
                FontSize="28"
                TextAlignment="Left"
                Margin="0,0,300,0"
                FontFamily="Arial"
                Foreground="#FF606060"
                VerticalAlignment="Top"
                HorizontalAlignment="Right" />

            <TextBlock 
                Name="tb_amount_return"
                FontSize="30"
                TextAlignment="Left"
                Margin="0,50,200,0"
                FontFamily="Arial"
                Foreground="#FF606060"
                VerticalAlignment="Top"
                HorizontalAlignment="Right" />

            <TextBlock 
                Name="tb_amount_tip"
                FontSize="30"
                TextAlignment="Left"
                Margin="0,115,200,0"
                FontFamily="Arial"
                Foreground="#FF606060"
                VerticalAlignment="Top"
                HorizontalAlignment="Right" />

            <TextBlock 
                Name="tb_reference"
                FontSize="30"
                TextAlignment="Left"
                Margin="0,10,200,0"
                FontFamily="Arial"
                Foreground="#FF606060"
                FontWeight="Bold"
                VerticalAlignment="Center"
                HorizontalAlignment="Right" />

            <TextBlock 
                Name="tb_id_transaction"
                FontSize="30"
                TextAlignment="Left"
                Margin="0,160,200,0"
                FontFamily="Arial"
                Foreground="#FF606060"
                VerticalAlignment="Center"
                HorizontalAlignment="Right" />

            <TextBlock 
                Name="tb_date"
                FontSize="30"
                TextAlignment="Left"
                Margin="0,0,200,26"
                FontFamily="Arial"
                Foreground="#FF606060"
                VerticalAlignment="Bottom"
                HorizontalAlignment="Right" />
        </Grid>
        <Grid Grid.Row="4">
            <Image Source="/Images/Buttons/btn-acept.png"
                    x:Name="btn_acept"
                    HorizontalAlignment="Center" 
                    VerticalAlignment="Center" 
                    Margin="0,0,0,0"                  
                    Width="350"
                    TouchDown="Btn_acept_TouchDown"/>
        </Grid>

    </Grid>
</UserControl>
