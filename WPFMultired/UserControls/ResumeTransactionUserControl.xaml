<UserControl x:Class="WPFMultired.UserControls.ResumeTransactionUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPFMultired.UserControls"
             mc:Ignorable="d"
             Height="1920" 
             Width="1080">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/Images/Backgrounds/bg-detail-transaction.jpg"/>
        </Grid.Background>

        <Grid.RowDefinitions>
            <RowDefinition Height="150" />
            <RowDefinition Height="550" />
            <RowDefinition Height="260" />
            <RowDefinition Height="400" />
            <RowDefinition Height="280" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid Grid.Row="1">
            <TextBlock 
                Text=""
                FontSize="32"
                TextAlignment="Left"
                Margin="0,0,150,0"
                FontFamily="Arial"
                Foreground="#FF606060"
                VerticalAlignment="Center"
                HorizontalAlignment="Right" />
            
            <TextBlock 
                Text=""
                FontSize="32"
                TextAlignment="Left"
                Margin="0,110,150,0"
                FontFamily="Arial"
                Foreground="#FF606060"
                VerticalAlignment="Center"
                HorizontalAlignment="Right" />

            <TextBlock 
                Text=""
                FontSize="32"
                TextAlignment="Left"
                Margin="0,250,150,0"
                FontFamily="Arial"
                Foreground="#FF606060"
                VerticalAlignment="Center"
                HorizontalAlignment="Right" />
        </Grid>


        <Grid Grid.Row="4">
            <Image Source="/Images/Buttons/btn-acept.png"
                    x:Name="btn_acept"
                    HorizontalAlignment="Center" 
                    VerticalAlignment="Center" 
                    Margin="0,0,0,0"                  
                    Width="350"
                    TouchDown="Btn_acept_TouchDown"/>
        </Grid>

    </Grid>
</UserControl>
