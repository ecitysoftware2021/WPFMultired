<UserControl x:Class="WPFMultired.UserControls.ConsultUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:k="clr-namespace:WPFMultired.Keyboard" 
             xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:local="clr-namespace:WPFMultired.UserControls"
             Loaded="UserControl_Loaded"
             mc:Ignorable="d"
             Height="1920" 
             Width="1080" >
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/Images/Backgrounds/bg-blanck.jpg"/>
        </Grid.Background>

        <Grid.RowDefinitions>
            <RowDefinition Height="100" />
            <RowDefinition Height="350" />
            <RowDefinition Height="900" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <Image x:Name="btn_exit"
               Source="/Images/Buttons/btn-exit.png"
               HorizontalAlignment="Right"
               VerticalAlignment="Top"
               Width="250"
               Margin="0,20,20,0"
               TouchDown="Btn_exit_TouchDown" />

            <Image x:Name="btn_back"
                Source="/Images/Buttons/btn-back.png"
                Grid.Column="0"
                HorizontalAlignment="Left" 
                VerticalAlignment="Top" 
                Width="250"
                Margin="20,20,0,0"
                TouchDown="Btn_back_TouchDown" />
        </Grid>

        <Grid Grid.Row="1">
            <TextBlock Name="txt_title"
                    FontSize="60"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Bottom"
                    Margin="0,0,0,80"
                    FontWeight="SemiBold" 
                    Foreground="#FF35679B"
                    TextWrapping="Wrap"
                    TextAlignment="Center"
                    Text="Por favor ingresar su identificación" />
        </Grid>

        <Grid Grid.Row="2" Name="gd_payer" Margin="50,0,50,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0">
                <TextBlock  HorizontalAlignment="Center"
                   VerticalAlignment="Top"
                   Margin="0,30,0,0"
                   TextAlignment="Center"
                   TextWrapping="Wrap"
                   FontFamily="Arial"
                   FontSize="48"
                   Foreground="#FF706F6F"
                   Text="{Binding Row1}" />

                <ComboBox Name="cmb_type_id"
                    Margin="0,31,0,0"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    HorizontalContentAlignment="Center"
                    FontFamily="Arial"
                    FontWeight="Medium"
                    Width="630"
                    Foreground="#FF104B6D"
                    FontSize="52"
                    ItemsSource="{Binding OptionsList}"
                    SelectedValuePath="Key"
                    DisplayMemberPath="Value"
                    SelectionChanged="Cmb_type_id_SelectionChanged"/>
            </Grid>

            <Grid Grid.Row="1">
                <TextBlock HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    Margin="0,30,0,0"
                    FontFamily="Arial"
                    TextAlignment="Center"
                    TextWrapping="Wrap"
                    FontSize="48"
                    Foreground="#FF706F6F"
                    Text="{Binding Row2}" />

                <PasswordBox Name="PassBoxIdentification"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       FontFamily="Arial"
                       FontWeight="Medium"
                       Margin="0,8,0,0"
                       HorizontalContentAlignment="Center"
                       FontSize="48"
                       Width="630"
                       Visibility="{Binding VisibleId}"
                       Foreground="#FF104B6D"
                       TabIndex="0"
                       k:TouchScreenKeyNumeric.TouchScreenKeyNumeric="True" />

                <TextBox Name="TbxIdentification"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       FontFamily="Arial"
                       FontWeight="Medium"
                       Margin="0,8,0,0"
                       HorizontalContentAlignment="Center"
                       FontSize="48"
                       IsEnabled="False"
                       Width="630"
                       Foreground="#FF104B6D"
                       Visibility="{Binding VisibleInput}"
                       TabIndex="2"
                       Text="{Binding Value1}" BorderBrush="#FF1D1B1B" />

                <Image Source="/Images/Buttons/btn-show-id.png"
                    x:Name="btn_show_id"
                    HorizontalAlignment="Right" 
                    VerticalAlignment="Center" 
                    Margin="0,0,150,0"                  
                    Width="60"
                    TouchEnter="Btn_show_id_TouchEnter"
                    TouchLeave="Btn_show_id_TouchLeave"/>

                <TextBox TabIndex="1" Height="0" Width="0" />

            </Grid>

            <Grid Grid.Row="3">
                <Image Source="/Images/Buttons/btn-consult.png"
                    x:Name="btn_consult"
                    HorizontalAlignment="Center" 
                    VerticalAlignment="Bottom" 
                    Margin="0,0,0,0"                  
                    Width="350"
                    TouchDown="Btn_consult_TouchDown"/>
            </Grid>
        </Grid>
    </Grid>
</UserControl>
