<UserControl x:Class="WPFMultired.UserControls.PaymentUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPFMultired.UserControls"
             mc:Ignorable="d" 
             Height="1920" 
             Width="1080">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/Images/Backgrounds/bgNewVacio2.jpg"
                        Stretch="Fill"/>
        </Grid.Background>
        <Grid.RowDefinitions>
            <RowDefinition Height="450" />
            <RowDefinition Height="*" />
            <RowDefinition Height="200" />
            <RowDefinition Height="160"/>
            <RowDefinition Height="380" />
            <RowDefinition Height="280"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="4">
            <ContentControl x:Name="grvPublicity"></ContentControl>
        </Grid>
        <Grid Grid.Row="0">
            <TextBlock  
                x:Name="txtHoraActual"
                HorizontalAlignment="Right"
                Margin="0,70,70,0" 
                FontSize="30" 
                Foreground="Gray"
                VerticalAlignment="Top"
                TextAlignment="Center" 
            />
            <Image 
                x:Name="btnCancell"
                Source="../Images/Buttons/NewSalir.png"
                Visibility="{Binding ImgCancel}"
                HorizontalAlignment="Right"
                Height="80"
                VerticalAlignment="Top"
                Margin="0,120,50,0"
                TouchDown="BtnCancell_TouchDown"
            />
            <TextBlock 
                Text="Ingresa tu dinero"
                FontSize="40"
                Width="500"
                TextAlignment="Center"
                TextWrapping="Wrap"
                Margin="0,210,0,0"
                FontFamily="Arial"
                Foreground="#FF5D5D5D"
                VerticalAlignment="Center"
                HorizontalAlignment="Center" 
            />
            <TextBlock 
                Text="Denominación"
                FontSize="30"
                TextAlignment="Center"
                Margin="100,0,0,0"
                FontFamily="Arial"
                Foreground="#FF5D5D5D"
                VerticalAlignment="Bottom"
                HorizontalAlignment="Left" Grid.Row="6" 
            />
            <TextBlock 
                Text="Cantidad"
                FontSize="30"
                TextAlignment="Center"
                Margin="0,0,0,0"
                FontFamily="Arial"
                Foreground="#FF5D5D5D"
                VerticalAlignment="Bottom"
                HorizontalAlignment="Center" 
            />
            <TextBlock 
                Text="Total ($)"
                FontSize="30"
                TextAlignment="Center"
                Margin="0,0,100,0"
                FontFamily="Arial"
                Foreground="#FF5D5D5D"
                VerticalAlignment="Bottom"
                HorizontalAlignment="Right" 
            />
        </Grid>
        <Grid Grid.Row="1">
            <ListView 
                x:Name="lv_denominations" 
                Margin="0,0,0,0"
                Background="Transparent"
                BorderBrush="Transparent"
                HorizontalAlignment="Center" 
                VerticalAlignment="Top"
                ItemsSource="{Binding}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <UniformGrid 
                            Columns="1"
                             HorizontalAlignment="Center"
                             VerticalAlignment="Top"
                        />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>

                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Grid 
                            HorizontalAlignment="Center"
                            VerticalAlignment="Top" 
                            Background="Transparent"
                            Margin="0,0,0,0"
                            Width="950"
                            Height="55">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="350" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <TextBlock 
                                Text="{Binding Denominacion, StringFormat={}{0:C0}}"
                                FontSize="30"
                                FontFamily="Arial"
                                TextAlignment="Center"
                                TextWrapping="Wrap"
                                Margin="0,0,30,0"
                                Foreground="#606060"
                                Width="300"
                                VerticalAlignment="Center"
                                HorizontalAlignment="Left"
                                Grid.Column="0" 
                            />

                            <TextBlock 
                                Text="{Binding Quantity}"
                                FontSize="30"
                                FontFamily="Arial"
                                TextAlignment="Center"
                                TextWrapping="Wrap"
                                Width="200"
                                Margin="0,0,0,0"
                                Foreground="Gray"
                                VerticalAlignment="Center"
                                HorizontalAlignment="left"
                                FontWeight="Bold"
                                Grid.Column="1" 
                            />
                            <TextBlock 
                                Text="{Binding Total, StringFormat={}{0:C0}}"
                                FontSize="30"
                                FontFamily="Arial"
                                TextAlignment="Right"
                                TextWrapping="Wrap"
                                Margin="0,0,30,0"
                                Width="230"
                                Foreground="Gray"
                                VerticalAlignment="Center"
                                HorizontalAlignment="Center"
                                FontWeight="Bold"
                                Grid.Column="2" 
                            />
                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </Grid>
        <Grid Grid.Row="2">
            <TextBlock 
                Text="Valor ingresado:"
                FontSize="30"
                TextAlignment="Center"
                Margin="100,50,0,0"
                FontFamily="Arial"
                Foreground="#FF5D5D5D"
                VerticalAlignment="Top"
                HorizontalAlignment="Left"
             />
            <TextBlock 
                Text="{Binding ValorIngresado, StringFormat={}{0:C0}}"
                FontSize="30"
                TextAlignment="Center"
                Margin="0,50,100,0"
                FontFamily="Arial"
                Foreground="Gray"
                VerticalAlignment="Top"
                HorizontalAlignment="Right"
             />
            <TextBlock 
                Text="Comisión:"
                FontSize="30"
                TextAlignment="Center"
                Margin="100,0,0,0"
                FontFamily="Arial"
                Foreground="#FF5D5D5D"
                VerticalAlignment="Bottom"
                HorizontalAlignment="Left"
             />
            <TextBlock 
                Text="{Binding ValorComision, StringFormat={}{0:C0}}"
                FontSize="30"
                TextAlignment="Center"
                Margin="0,0,100,0"
                FontFamily="Arial"
                Foreground="Gray"
                VerticalAlignment="Bottom"
                HorizontalAlignment="Right"
             />
            <TextBlock 
                x:Name="txtPayValue"
                Text="Valor a pagar:"
                FontSize="30"
                TextAlignment="Center"
                Margin="100,50,0,0"
                FontFamily="Arial"
                Foreground="#FF5D5D5D"
                VerticalAlignment="Center"
                HorizontalAlignment="Left"
             />
            <TextBlock 
                x:Name="txtPayValueData"
                Text="{Binding PayValue, StringFormat={}{0:C0}}"
                FontSize="30"
                TextAlignment="Center"
                Margin="0,50,100,0"
                FontFamily="Arial"
                Foreground="Gray"
                VerticalAlignment="Center"
                HorizontalAlignment="Right"
             />
        </Grid>
        <Grid Grid.Row="3">
            <Image 
                Source="../Images/Buttons/NewDevolver.png" 
                Stretch="Uniform"
                Height="100"
                Visibility="{Binding ImgCambio}"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Margin="0,0,50,0" 
            />
            <Image 
                x:Name="btnConsign"
                Source="../Images/Buttons/NewContinuar.png"
                Stretch="Uniform"
                Height="100"
                Visibility="{Binding ImgContinue}"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Margin="0,0,100,0" 
                StylusDown="BtnConsign_StylusDown" 
            />
        </Grid>
    </Grid>
</UserControl>