<UserControl x:Class="WPFMultired.UserControls.DetailUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPFMultired.UserControls"
             mc:Ignorable="d" 
             Height="1920" 
             Width="1080" >
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/Images/Backgrounds/bgNewVacio2.jpg"/>
        </Grid.Background>
        <Grid.RowDefinitions>
            <RowDefinition Height="200" />
            <RowDefinition Height="*" />
            <RowDefinition Height="200" />
            <RowDefinition Height="380" />
            <RowDefinition Height="280" />
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <ContentControl x:Name="grvPublicity"></ContentControl>
        </Grid>
        <Grid Grid.Row="0">
            <TextBlock  
                x:Name="txtHoraActual"
                HorizontalAlignment="Right"
                Margin="0,70,70,0" 
                FontSize="30" 
                Foreground="Gray"
                VerticalAlignment="Top"
                TextAlignment="Center" 
            />
            <Image 
                x:Name="btn_exit"
                Source="../Images/Buttons/NewSalir.png"
                HorizontalAlignment="Right"
                Height="80"
                VerticalAlignment="Top"
                Margin="0,120,50,0"
                TouchDown="Btn_exit_TouchDown" 
            />
            <Image 
                x:Name="btn_back"
                Source="../Images/Buttons/NewAtras.png"
                HorizontalAlignment="Right"
                Height="80"
                VerticalAlignment="Top"
                Margin="0,120,300,0"
                TouchDown="Btn_back_TouchDown" 
            />
        </Grid>
        <Grid Grid.Row="1">
            <Grid>
                <Image 
                    Source="/Images/Others/alert.png"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    Height="150"
                    Stretch="Uniform"
                    Opacity="0.4"
                    Margin="0,150,0,0"
                    TouchDown="btn_Accept_TouchDown"
                />
                <TextBlock 
                    Text="Confirma la transacción"
                    HorizontalAlignment="Center"
                    Margin="0,320,0,0" 
                    FontSize="40" 
                    Foreground="Gray"
                    FontFamily="Myriad Pro"
                    VerticalAlignment="Top"
                    TextAlignment="Center" 
                />
                <TextBlock  
                    Text="Usted va a depositar dinero en la cuenta"
                    HorizontalAlignment="Center"
                    Margin="0,100,0,0" 
                    FontSize="35" 
                    Foreground="Gray"
                    FontFamily="Myriad Pro"
                    TextWrapping="Wrap"
                    VerticalAlignment="Center"
                    TextAlignment="Center" 
                />
                <TextBlock  
                    Text="{Binding Code}"
                    HorizontalAlignment="Center"
                    Margin="0,220,0,0" 
                    FontSize="30" 
                    Width="700"
                    FontFamily="Myriad Pro"
                    Foreground="Gray"
                    VerticalAlignment="Center"
                    TextAlignment="Center" 
                />
                <TextBlock  
                    Text="Valor de comisión"
                    HorizontalAlignment="Left"
                    Margin="150,420,0,0" 
                    FontSize="30" 
                    Foreground="Gray"
                    FontFamily="Myriad Pro"
                    TextWrapping="Wrap"
                    VerticalAlignment="Center"
                    TextAlignment="Center" 
                />
                <TextBlock  
                    Text="___________________"
                    HorizontalAlignment="Left"
                    Margin="150,420,0,0" 
                    FontSize="40" 
                    Foreground="#FFA3BD36"
                    FontFamily="Myriad Pro"
                    TextWrapping="Wrap"
                    VerticalAlignment="Center"
                    TextAlignment="Center" 
                />
                <TextBox 
                    Text="{Binding AmountCommission, StringFormat={}{0:C0}}"
                    HorizontalAlignment="Right"
                    Margin="0,420,150,0" 
                    FontSize="30"
                    Width="300"
                    FontFamily="Myriad Pro"
                    Foreground="Gray"
                    VerticalAlignment="Center"
                    TextAlignment="Center" 
                    IsReadOnly="True"
                 >
                    <TextBox.Resources>
                        <Style TargetType="{x:Type Border}">
                            <Setter Property="CornerRadius" Value="20"/>
                        </Style>
                    </TextBox.Resources>
                    <TextBox.Background>
                        <SolidColorBrush Color="White" Opacity="0.6"/>
                    </TextBox.Background>
                </TextBox>
                <TextBlock  
                    Text="Valor a depositar"
                    HorizontalAlignment="Left"
                    Margin="150,615,0,0" 
                    FontSize="30" 
                    Foreground="Gray"
                    FontFamily="Myriad Pro"
                    TextWrapping="Wrap"
                    VerticalAlignment="Center"
                    TextAlignment="Center" 
                />
                <TextBlock  
                    Text="___________________"
                    HorizontalAlignment="Left"
                    Margin="150,620,0,0" 
                    FontSize="40" 
                    Foreground="#FFA3BD36"
                    FontFamily="Myriad Pro"
                    TextWrapping="Wrap"
                    VerticalAlignment="Center"
                    TextAlignment="Center" 
                />
                <TextBox  
                    Text="{Binding AmountUser, StringFormat={}{0:C0}}"
                    HorizontalAlignment="Right"
                    Margin="0,600,150,0" 
                    FontSize="30" 
                    Width="300"
                    FontFamily="Myriad Pro"
                    Foreground="Gray"
                    VerticalAlignment="Center"
                    TextAlignment="Center" 
                    IsReadOnly="True"
                >
                    <TextBox.Resources>
                        <Style TargetType="{x:Type Border}">
                            <Setter Property="CornerRadius" Value="20"/>
                        </Style>
                    </TextBox.Resources>
                    <TextBox.Background>
                        <SolidColorBrush Color="White" Opacity="0.6"/>
                    </TextBox.Background>
                </TextBox>
            </Grid>
        </Grid>
        <Grid Grid.Row="2">
            <Image 
                Name="btn_Accept"
                Source="/Images/Buttons/NewAceptar2.png"
                Stretch="Uniform"
                Height="100"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Margin="0,50,100,0"
                TouchDown="btn_Accept_TouchDown" 
            />
            <Image 
                x:Name="btnCancell"
                Source="/Images/Buttons/NewCancelar.png"
                Stretch="Uniform"
                Height="100"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Margin="100,50,0,0"
                TouchDown="BtnCancell_TouchDown" 
            />
        </Grid>
    </Grid>
</UserControl>
