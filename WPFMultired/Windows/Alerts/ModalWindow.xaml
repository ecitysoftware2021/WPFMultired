<Window x:Class="WPFMultired.Windows.ModalWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFMultired.Windows"
        xmlns:gif="http://wpfanimatedgif.codeplex.com"
        gif:ImageBehavior.AnimateInDesignMode="True"
        mc:Ignorable="d"
        Title="ModalWindow"  
        WindowStyle="None"
        Topmost="False"
        WindowState="Maximized"
        Height="2064.095" 
        Width="1250.599"
        WindowStartupLocation="CenterScreen" >
    
    <Grid TouchDown="Grid_TouchDown">
        <Grid.Background>
            <ImageBrush ImageSource="{Binding ImageModal}" Stretch="Fill"/>
        </Grid.Background>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="360" />
                <RowDefinition Height="810" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <Grid Grid.Row="1">
                <Image gif:ImageBehavior.AnimatedSource="/Images/Gif/gif-preload.gif" 
                       gif:ImageBehavior.AnimateInDesignMode="True"
                       gif:ImageBehavior.AutoStart="True" 
                       x:Name="GifLoadder"  
                       Stretch="Fill"
                       VerticalAlignment="Top" 
                       HorizontalAlignment="Center" 
                       Width="180" 
                       Height="180"
                       Margin="20,80,0,0"
                       Visibility="Hidden"/>

                <TextBlock x:Name="LblTittle" 
                           Text="{Binding Tittle}"
                           HorizontalAlignment="Center"
                           Margin="0,260,0,0" 
                           FontSize="55" 
                           Width="500"
                           FontFamily="Myriad Pro"
                           FontWeight="Bold"
                           Foreground="#FF606060"
                           TextWrapping="WrapWithOverflow"
                           VerticalAlignment="Top"
                           TextAlignment="Center" />

                <TextBlock x:Name="LblMessage" 
                           Text="{Binding Messaje}"
                           HorizontalAlignment="Center"
                           Margin="0,320,0,0" 
                           FontSize="48" 
                           Width="500"
                           FontFamily="Myriad Pro"
                           Foreground="#FF606060"
                           TextWrapping="WrapWithOverflow"
                           VerticalAlignment="Center"
                           TextAlignment="Center" />

                <TextBlock x:Name="LblMessageTouch" 
                           Text="¡Toca la pantalla para continuar!"
                           HorizontalAlignment="Center"
                           Margin="0,320,0,0" 
                           FontSize="30" 
                           Width="500"
                           FontFamily="Myriad Pro"
                           Foreground="#FF606060"
                           TextWrapping="WrapWithOverflow"
                           VerticalAlignment="Bottom"
                           TextAlignment="Center" />
            </Grid>

            <Grid Grid.Row ="2">
                <Image x:Name="BtnOk" 
                        VerticalAlignment="Top"
                        HorizontalAlignment="Center"
                        Width="180"
                        Height="80"
                        Margin="0,80,0,0"
                        TouchDown="BtnOk_TouchDown"
                        Source="/Images/Buttons/btn-continue.png" Stretch="Fill" />

                <Image x:Name="BtnNo" 
                        VerticalAlignment="Top"
                        HorizontalAlignment="Left"
                        Width="200"
                        Height="80"
                        Margin="180,80,0,0"
                        TouchDown="BtnNo_TouchDown"
                        Source="/Images/Buttons/btn-cancel-alert.png" Stretch="Fill" />

                <Image x:Name="BtnYes" 
                        VerticalAlignment="Top"
                        HorizontalAlignment="Right"
                        Width="180"
                        Height="80"
                        Margin="0,80,180,0"
                        TouchDown="BtnYes_TouchDown"
                        Source="/Images/Buttons/btn-continue.png" Stretch="Fill" />
            </Grid>
        </Grid>
    </Grid>
</Window>
