<Window x:Class="WPFMultired.Windows.Alerts.ModalNewWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFMultired.Windows.Alerts"
        mc:Ignorable="d"
        Title="ModalNewWindow" WindowStyle="None"
        Height="700" 
        Width="700"
        Background="Transparent"
        WindowStartupLocation="CenterScreen"
        >
    <Grid TouchDown="Grid_TouchDown">
        <Grid.Background>
            <ImageBrush ImageSource="{Binding url}"/>
        </Grid.Background>
        <TextBlock 
            Name="txtMs"
            Text="{Binding message}"
            FontFamily="Arial"
            FontSize="30"
            VerticalAlignment="Center"
            HorizontalAlignment="Center"
            Margin="0,50,0,0" 
            Width="550"
            Foreground="Gray"
            TextWrapping="Wrap"
            TextAlignment="Center"
        />
    </Grid>
</Window>
